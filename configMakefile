ifeq "$(OS)" "Windows_NT"
	PIC :=
	PREDLL :=
else
	PIC := -fPIC
	PREDLL := lib
endif

ifneq "$(SFML_INSTALLDIR)" ""
	SFML_HEADERS := -isystem$(SFML_INSTALLDIR)/include
	SFML_LINKLIB := -L$(SFML_INSTALLDIR)/lib
else
	SFML_HEADERS :=
	SFML_LINKLIB :=
endif

CEREAL_VERSION := "$(shell cd ext/cereal && git describe --tags)"
CPPFORMAT_VERSION := "$(shell grep 'set.CPPFORMAT_VERSION' ext/cppformat/CMakeLists.txt | perl -pe 's/set\(CPPFORMAT_VERSION (.+)\)/\1/')"

OBJ := .o
ARCH := .a
AR := ar
CXXAR := -Os -std=c++14 -pedantic -Wall -Wextra -pipe $(PIC)
STRIP := strip
STRIPAR := --strip-all --remove-section=.comment --remove-section=.note

OUTDIR := out/
OBJDIR := $(OUTDIR)obj/
SRCDIR := src/
ASSETDIR := assets/
